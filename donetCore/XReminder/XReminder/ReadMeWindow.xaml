<Window x:Class="XReminder.ReadMeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XReminder"
        mc:Ignorable="d"
        Title="ReadMe" Height="543" Width="693" WindowStyle="None" Background="#FF181819" BorderBrush="#FF595959" BorderThickness="1,1,1,1" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False" MouseDown="Window_MouseDown">
    <Window.Resources>
        <!--用于一键换肤-->
        <ResourceDictionary Source="XRemindRes.xaml"></ResourceDictionary>
    </Window.Resources>
    <Canvas Margin="0,0,0,0">
        <Label Content="XReminder使用说明"  Height="40" Foreground="#FFE8E8E8" Canvas.Top="10" FontSize="16" Canvas.Left="200" Width="291" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txt_readme" Canvas.Left="10" Canvas.Top="55" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFDAE6E8" SelectionBrush="#FFEAEAEA" SelectionTextBrush="#FF252525" FontSize="14" IsReadOnlyCaretVisible="True" IsReadOnly="True" MaxLines="100" Width="671" Height="441" BorderThickness="0,0,0,0"/>
        <Button x:Name="btn_close" Style="{StaticResource MyButton}" Content="" Width="30" Height="30"  BorderBrush="{x:Null}" Foreground="{x:Null}" Canvas.Left="661" Cursor="Hand" Click="btn_close_Click">
            <Button.Background>
                <ImageBrush ImageSource="/UIImages/close.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_donate" Content="捐赠" Canvas.Left="603" Canvas.Top="503" Height="30" Width="80" FontSize="16" Click="btn_donate_Click"/>


    </Canvas>
</Window>
