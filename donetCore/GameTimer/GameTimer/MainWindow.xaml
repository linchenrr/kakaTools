<Window x:Class="GameTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTimer"
        mc:Ignorable="d"
        Title="原神深渊计时帮手" Height="219" Width="316" Background="#FF3F3F46">

    <Canvas>
        <Button x:Name="btn_start" Content="开始" Canvas.Left="116" Canvas.Top="86" Height="31" Width="84" Click="btn_start_Click"/>
        <Button x:Name="btn_stop" Content="停止" Canvas.Left="116" Canvas.Top="86" Height="31" Width="84" Click="btn_stop_Click"/>
        <TextBox x:Name="txt_interval" Canvas.Left="138" Canvas.Top="53" Text="12" TextWrapping="Wrap" Width="88"/>
        <Label Content="间隔秒数" Canvas.Left="75" Canvas.Top="49" Foreground="#FFE4E4E4" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="txt_startDelay" Canvas.Left="138" Canvas.Top="23" Text="12" TextWrapping="Wrap" Width="88"/>
        <Label Content="开始前等待" Canvas.Left="63" Canvas.Top="19" Foreground="#FFE4E4E4"/>
    </Canvas>


</Window>
